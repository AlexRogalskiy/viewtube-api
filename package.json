{
  "name": "viewtube-api",
  "version": "0.1.0",
  "description": "The API for ViewTube, an alternative YouTube frontend.",
  "author": "Maurice Oegerli",
  "country": "Switzerland",
  "email": "viewtube@m-o.dev",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "serve": "nest start",
    "serve:dev": "nest start --watch",
    "serve:db": "mongod --dbpath=\"data\"",
    "serve:debug": "nest start --debug --watch",
    "start": "node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.2",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/mongoose": "^7.0.2",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/schedule": "^0.4.0",
    "@nestjs/swagger": "^4.5.12",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^3.2.1",
    "class-transformer": "^0.3.1",
    "cookie-parser": "^1.4.5",
    "fluent-ffmpeg": "^2.1.2",
    "https-proxy-agent": "^5.0.0",
    "humanize-duration": "^3.22.0",
    "mongoose": "^5.9.28",
    "mysql": "^2.18.1",
    "node-fetch": "^2.6.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "split-file-stream": "^1.3.0",
    "swagger-ui-express": "^4.1.4",
    "trek-captcha": "^0.4.0",
    "web-push": "^3.4.4",
    "xml2json": "^0.12.0",
    "ytdl-core": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/fluent-ffmpeg": "^2.1.14",
    "@types/humanize-duration": "^3.18.0",
    "@types/jest": "26.0.9",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/node-fetch": "^2.5.7",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@types/web-push": "^3.3.0",
    "@types/xml2json": "^0.11.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^26.2.2",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.4",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
